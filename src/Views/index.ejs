<%- include('includes/head') %>
<%- include('includes/nav') %>
    

<div class="container">
  <div class="row">
   <div class="col-lg-2"></div>
   <div class="col-lg-8 my-5">
      <h1 class="text-center"> Agenda</h1>
      <p class="text-center lead">Seus contatos estão abaixo!</p>
      <%- include('includes/messages')%>
   </div>


   <div class="responsive-table">
    <% if( contatos.length > 0 ) { %>
    <table class="table my-3">
      <tr>
        <td>Nome</td>
        <td>Sobrenome</td>
        <td>Telefone</td>
        <td>Email</td>
      </tr>
    <% contatos.forEach(contato => { %>
      <tr>
        <td><%= contato.nome %></td>
        <td><%= contato.sobrenome %></td>
        <td><%= contato.telefone %></td>
        <td><%= contato.email %></td>
        <td> <a href="/contato/index/<%= contato._id %>"> Editar </a> </td>
        <td> <a class="text-danger" href="/contato/delete/<%= contato._id %>"> Excluir </a> </td>
      </tr>

    <% });%>
    </table>
    <% } else { %>
      <p class="text-center lead"> Não existem contatos cadastrados na sua agenda. </p>
      <% } %>
   </div>


   <div class="col-lg-2"></div>
  </div>

</div>


<%- include('includes/footer') %>
